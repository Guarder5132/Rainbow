<% provide(:title, '所有用户') %>
<div>
<h1>所有用户</h1>
    <%= will_paginate %>
    <% @users.each do |user| %>
        <li>
            <%= gravatar_for user ,size:20%>
            <%= link_to user.name, user %> 
            <% if current_user.admin? && !current_user?(user) %>
            |    <%= link_to '删除', user , method: :delete %>
            <% end %>
        </li><p>
    <% end %>
    <%= will_paginate %>
</div>
<% provide(:title, '注册') %>
<h2>注册新用户</h2>
<div >
    <%= form_for(@user) do |f|%>
        <%= render 'shared/error',object:f.object %>

        <%= f.label :name, "用户名" %>
        <%= f.text_field :name%>

        <%= f.label :email, "邮箱" %>
        <%= f.text_field :email %>

        <%= f.label :password, "密码" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "确认密码" %>
        <%= f.password_field :password_confirmation %>

        <p><%= f.submit "注册" ,class:"btn"%>
    <% end %>
</div>
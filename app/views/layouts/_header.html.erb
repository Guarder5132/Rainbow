<header class="navbar navbar-fixed-down navbar-inverse">
<div class="navbar-inner">
    <%= link_to "Rainbow", root_path, id: "logo"%> 
    <nav>
        <ul class="nav pull-right">
            <li><%= link_to "主页", root_path %></li>
            <% if signed_in? %>
            <%= render 'shared/follow_number' %>
                <li id="fat-menu" class="dropdown"> 
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= current_user.name %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "个人信息", user_path(current_user)%>
                        <li><%= link_to "所有用户", users_path %></li>
                        <li><%= link_to "更改信息", edit_user_path(current_user) %>
                        <li class="divider"></li>
                        <li><%= link_to "登出", signout_path, method: "delete" %></li>
                    </ul>
                </li>
                <li><%= gravatar_for current_user,size: 40 %></li>
            <% else %>
                <li><%= link_to "登录", signin_path %></li>
            <% end %>
        </ul>
    </nav>
</div>
</header>